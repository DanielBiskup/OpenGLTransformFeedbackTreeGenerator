prefix=/usr/local
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib

Name: GLFW
Description: A portable library for OpenGL, window and input
Version: 3.0.4
URL: http://www.glfw.org/
Requires.private:  x11 xrandr xi xxf86vm gl
Libs: -L${libdir} -lglfw
Libs.private:  -lrt -lm
Cflags: -I${includedir}
